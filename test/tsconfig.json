{
    "compilerOptions": {
        "declaration": false,
        "lib": ["es5", "es2015.collection", "es2015.iterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "rootDir": "..",
        "sourceMap": true,
        "strict": true
    },
    "exclude": ["../src/*.ts", "../src/**/*.ts", "../util/*.ts", "../util/**/*.ts"],
    "include": ["./*.ts", "./unit/**/*.ts"]
}
