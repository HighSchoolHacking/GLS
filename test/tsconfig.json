{
    "compilerOptions": {
        "declaration": false,
        "lib": ["dom", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "rootDir": "..",
        "sourceMap": true,
        "strictNullChecks": true
    },
    "exclude": [
        "../src/**/*.ts"
    ],
    "include": [
        "./*.ts",
        "./unit/**/*.ts"
    ]
}
